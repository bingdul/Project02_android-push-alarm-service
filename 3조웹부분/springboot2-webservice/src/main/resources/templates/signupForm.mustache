<body class="text-center">

<main class="form-signin">
    <form action="/join" method="POST" >
        <img class="mb-4" src="img/logov2rem.png" alt="" >

        <div class="form-floating">
            <input type="email" class="form-control" name="username"  placeholder="name@example.com">
            <label for="floatingInput">가입할 이메일을 적어주세요</label>
        </div>
        <div class="form-floating">
            <input type="password" class="form-control" name="password" placeholder="Password">
            <label for="floatingPassword">사용할 비밀번호를 적어주세요</label>
        </div>

        {{#errormsg}}
            <p style="color:red">{{errormsg}}</p>
            {{/errormsg}}
        <button class="w-100 btn btn-lg btn-primary" type="submit">회원가입하기</button>

        <!--        <button class="w-100 btn btn-lg btn-primary" type="signup">회원가입하기</button>-->
        <!--        <button class="w-100 btn btn-lg btn-primary" type="submit">로그인</button>-->

        <p class="mt-5 mb-3 text-muted">&copy; (주) Secom dalcom</p>
    </form>
</main>



